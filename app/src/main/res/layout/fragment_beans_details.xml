<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cstm="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/blubb"
        android:scaleType="fitCenter"
        android:background="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/dateTxt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imageView"
        android:textColor="@color/date_textcolor"
        android:gravity="center"
        android:textSize="16sp"
        android:background="@color/date_background"
        />

    <TextView
        android:id="@+id/eventTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateTxt"
        android:layout_marginTop="30dp"
        android:textColor="@color/default_text"
        android:gravity="center"
        android:textSize="20sp"
        />

    <beansjar.djimpanse.com.beansjar.beans.ratings.RatingIcon
        android:id="@+id/rating1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toStartOf="@+id/rating2"
        android:layout_marginStart="15dp"
        android:layout_alignTop="@+id/rating2"
        android:src="@drawable/ic_rating"
        cstm:rating="1"
        />

    <beansjar.djimpanse.com.beansjar.beans.ratings.RatingIcon
        android:id="@+id/rating2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/eventTxt"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_rating"
        cstm:rating="2"
        />

    <beansjar.djimpanse.com.beansjar.beans.ratings.RatingIcon
        android:id="@+id/rating3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/rating2"
        android:layout_marginEnd="15dp"
        android:layout_alignTop="@+id/rating2"
        android:src="@drawable/ic_rating"
        cstm:rating="3"
        />

</RelativeLayout>